<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cookMeGood.makeItTasteIt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-feature android:name="android.hardware.camera" android:required="true" />


    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning"
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        tools:targetApi="m">

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.android.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths">
            </meta-data>
        </provider>
        <activity
            android:name=".view.activity.SplashActivity"
            android:theme="@style/AuthActivityTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".view.activity.StartActivity"
            android:label="@string/title_activity_authorize"
            android:theme="@style/AuthActivityTheme">
        </activity>

        <activity
            android:name=".view.activity.AuthActivity"
            android:label="@string/title_activity_reg"
            android:theme="@style/AuthActivityTheme" />

        <activity
            android:name=".view.activity.MainActivity"
            android:label="@string/title_activity_start"
            android:theme="@style/MainActivityTheme"/>

        <activity
            android:name=".view.activity.RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:theme="@style/RecipeActivityTheme" />

        <activity
            android:name=".view.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:theme="@style/SearchActivityTheme"/>

        <activity
            android:name=".view.activity.SuggestActivity"
            android:label="@string/title_suggest"
            android:theme="@style/SuggestActivityTheme"/>

        <activity
            android:name=".view.fragment.RestaurantFragment"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".view.fragment.CartFragment"
            android:label="@string/title_activity_cart"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".view.fragment.CategoryFragment"
            android:label="@string/title_activity_recipes"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".view.fragment.FavouritesFragment"
            android:label="@string/title_activity_favourites"
            tools:ignore="Instantiatable" />

        <activity
            android:name=".view.fragment.MainFragment"
            android:label="@string/title_activity_category"
            tools:ignore="Instantiatable" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>