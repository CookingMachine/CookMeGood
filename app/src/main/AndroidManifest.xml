<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.cookMeGood.makeItTasteIt">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.cookMeGood.makeItTasteIt.activity.AuthActivity"
            android:label="@string/title_activity_authorize">
            <intent-filter>

                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />

            </intent-filter>
        </activity>

        <activity
            android:name="com.cookMeGood.makeItTasteIt.activity.RegActivity"
            android:label="@string/title_activity_reg"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity android:name="com.cookMeGood.makeItTasteIt.fragment.CabinetFragment" />
        <activity android:name="com.cookMeGood.makeItTasteIt.activity.StartActivity" />
        <activity android:name="com.cookMeGood.makeItTasteIt.activity.BuylistActivity" />
        <activity android:name="com.cookMeGood.makeItTasteIt.fragment.SuggestFragment" />
        <activity android:name="com.cookMeGood.makeItTasteIt.activity.SearchActivity" />

        <activity
            android:name="com.cookMeGood.makeItTasteIt.fragment.CartFragment"
            android:label="@string/title_activity_cart" />
        <activity
            android:name="com.cookMeGood.makeItTasteIt.fragment.CategoryFragment"
            android:label="@string/title_activity_recipes" />
        <activity
            android:name="com.cookMeGood.makeItTasteIt.fragment.FavouritesFragment"
            android:label="@string/title_activity_favourites" />
        <activity
            android:name="com.cookMeGood.makeItTasteIt.activity.RecipeActivity"
            android:label="@string/title_activity_recipe"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name="com.cookMeGood.makeItTasteIt.fragment.MainFragment"
            android:label="@string/title_activity_category" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>