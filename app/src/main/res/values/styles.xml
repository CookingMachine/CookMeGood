<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:statusBarColor">@color/colorWhite</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack80</item>
        <item name="colorControlActivated">@color/colorBlack</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="SearchViewIngredients" parent="Widget.AppCompat.SearchView">
        <item name="queryBackground">@android:color/transparent</item>
        <item name="searchIcon">@drawable/ic_search_white</item>
        <item name="closeIcon">@drawable/ic_close_white</item>
        <item name="queryHint">@string/hint_search</item>
        <item name="android:imeActionId">6</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack40</item>
    </style>

    <style name="AuthActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@drawable/color_gradient_background</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="MainActivityTheme" parent="AppTheme">
        <item name="android:windowFullscreen">false</item>
    </style>

    <style name="RecipeActivityTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:statusBarColor">@color/colorWhite40</item>
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="SuggestActivityTheme" parent="AppTheme">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:statusBarColor">@color/colorWhite40</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>

    <style name="SearchActivityTheme" parent="AppTheme">
        <item name="android:statusBarColor">@color/primaryColor</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:textColorSecondary">@color/colorWhite</item>
        <item name="android:textCursorDrawable">@drawable/shape_cursor_white</item>
    </style>

    <style name="AppThemeToolbar" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorBlack</item>
        <item name="colorPrimaryDark">@color/colorBlack80</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="android:textColorSecondary">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorBlack</item>
        <item name="actionMenuTextColor">@color/colorBlack</item>
    </style>

    <style name="MaterialTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10.5sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:itemBackground">@color/colorBlack</item>
    </style>

    <style name="RecipeRatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/colorGreyDark</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="ToolbarTitle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TabText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

</resources>
