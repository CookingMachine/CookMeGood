<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryColor</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="android:titleTextStyle">@style/MyTextAppearance</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorControlActivated">@color/colorWhite</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- стиль для текста -->
    <style name="MyTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="recButton" parent="@style/Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/primaryColor</item>
        <item name="colorControlHighlight">@color/primaryColor</item>
    </style>

    <style name="MyCheckBox" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@color/primaryColor</item>
    </style>

    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <!-- стиль для bottom_navigation_bar -->
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10.5sp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/primaryColor</item>
        <item name="android:itemBackground">@color/colorBlack</item>
    </style>

    <!-- ProgressBarCircular -->
    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primaryColor</item>
    </style>

    <style name="RecipeRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:minHeight">16dp</item>
        <item name="android:minWidth">16dp</item>
        <item name="android:progressDrawable">@drawable/shape_rating_bar</item>
    </style>

</resources>
