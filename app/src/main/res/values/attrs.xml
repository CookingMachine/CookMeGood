<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="CardViewWithDescription">
        <attr name="cardTheme" format="string"/>
        <attr name="cardTitle" format="string"/>
        <attr name="cardDescription" format="string"/>
        <attr name="cardImage" format="reference"/>
    </declare-styleable>

    <declare-styleable name="CardViewWithTitle">
        <attr name="title" format="string"/>
        <attr name="image" format="reference"/>
    </declare-styleable>

    <declare-styleable name="Backdrop">
        <attr name="front_layout" format="reference" />
        <attr name="back_layout" format="reference" />
        <attr name="toolbarId" format="reference" />
        <attr name="peekHeight" format="dimension" />
        <attr name="menuDrawable" format="reference" />
        <attr name="closeDrawable" format="reference" />
        <attr name="animationDuration" format="integer" />
    </declare-styleable>

</resources>