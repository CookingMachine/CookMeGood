<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/auth_bg"
    android:scaleType="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center">
        <ImageView
            android:layout_width="@dimen/pic_width"
            android:layout_height="@dimen/pic_height"
            android:gravity="center"
            android:layout_marginVertical="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/logo"
            android:layout_marginTop="110dp" />
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginVertical="250dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp"
                android:text="@string/hint_nameSurname"
                app:fontFamily="@font/roboto"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/edit_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/white"
                android:inputType="text"
                android:paddingBottom="17dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:fontFamily="@font/roboto"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="320dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="44dp"
            android:text="@string/hint_email"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            app:fontFamily="@font/roboto"/>

        <EditText
            android:id="@+id/edit_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="0dp"
            android:layout_marginRight="40dp"
            android:backgroundTint="@color/white"
            app:fontFamily="@font/roboto"
            android:inputType="textEmailAddress"
            android:paddingBottom="17dp"
            android:text=""
            android:textColor="#FFFFFF"
            android:textColorHint="@color/white"
            android:textSize="16sp"
            android:textStyle="bold">
        </EditText>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="430dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="44dp"
                app:fontFamily="@font/roboto"
                android:text="@string/hint_password"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold">
            </TextView>

            <EditText
                android:id="@+id/edit_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="0dp"
                android:layout_marginRight="40dp"
                android:backgroundTint="@color/white"
                app:fontFamily="@font/roboto"
                android:inputType="textPassword"
                android:paddingBottom="17dp"
                android:text=""
                android:textColor="#FFFFFF"
                android:textColorHint="@color/white"
                android:textSize="16sp"
                android:textStyle="bold">
            </EditText>

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="start"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="44dp"
                android:layout_marginTop="7dp"
                android:paddingLeft="7dp"
                android:paddingTop="9dp"
                android:text="Я согласен с пользовательским соглашением"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:textStyle="bold"
                android:theme="@style/MyCheckBox" />
        </LinearLayout>

    <Button
        android:id="@+id/btn_register"
        android:layout_width="127dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/textBottom"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="80dp"
        android:background="@drawable/rounded_corners_button_inversed"
        app:fontFamily="@font/roboto"
        android:insetBottom="6dp"
        android:text="@string/btn_register"
        android:textColor="@color/white"
        android:textSize="9sp" />

    <TextView
        android:id="@+id/textBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/i_have_account"
        android:textColor="#eaeaea"
        android:textSize="10sp"
        android:textStyle="normal"
        app:fontFamily="@font/roboto_light" />
</RelativeLayout>