<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MaterialTheme"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    android:layout_margin="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/linearStepTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/recipeStepTitle"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="@dimen/marginSide"
            app:fontFamily="@font/roboto_light"
            android:textColor="@color/colorBlack"
            android:text="@string/text_step_name" />

        <TextView
            android:id="@+id/recipeStepNumber"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/shape_round_login"
            android:gravity="center"
            android:fontFamily="@font/roboto_light"
            android:textSize="12sp"
            android:textColor="@color/colorWhite"
            android:text="@string/text_step_number"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recipeStepDescription"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="80dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearStepTop"
        android:fontFamily="@font/roboto_light"
        android:layout_centerHorizontal="true"
        android:text="@string/text_recipe"
        android:textColor="@color/colorBlack"
        android:textAlignment="textStart" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>
</RelativeLayout>