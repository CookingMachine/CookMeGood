<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal">
    
    <ImageView
        android:id="@+id/cartRecipeImage"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/pic1"
        />

    <TextView
        android:id="@+id/cartRecipeName"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="@string/title_activity_recipe"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        app:fontFamily="@font/roboto_light"
        />

    <Button
        android:id="@+id/toPurchasesButton"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:background="@drawable/rounded_corners_button_inversed"
        android:fontFamily="@font/roboto"
        android:text="@string/btn_toPurchases"
        android:textColor="@color/white"
        android:textSize="10sp"
        />

</LinearLayout>