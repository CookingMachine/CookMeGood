<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="120dp">

    <EditText
        android:id="@+id/suggestDescriptionEditText"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginDef"
        android:layout_marginStart="@dimen/marginDef"
        android:layout_marginEnd="@dimen/marginDef"
        android:padding="8dp"
        android:gravity="start|top"
        android:background="@drawable/shape_suggest_edit_window"
        android:autofillHints="Описание"
        android:inputType="textMultiLine"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:textColor="@color/colorBlack"
        tools:ignore="LabelFor" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="7dp"
        android:text="@string/text_suggest_description"
        android:textSize="12sp"
        android:background="@color/colorWhite"/>

</RelativeLayout>