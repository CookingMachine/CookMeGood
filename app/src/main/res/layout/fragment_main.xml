<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/MaterialTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/mainFragmentToolbar"
            android:layout_height="?attr/actionBarSize"
            android:layout_width="match_parent"
            app:menu="@menu/menu_main_fragment"/>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorWhite"
            android:orientation="vertical">

            <com.cookMeGood.makeItTasteIt.view.custom.CardViewWithDescription
                android:id="@+id/dishOfTheDayCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardTheme="@string/dish_of_the_day"
                app:cardTitle="Свинина по-французски"
                app:cardDescription="@string/dish_of_the_day_description"
                app:cardImage="@drawable/image_dish_of_the_day"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mainFragmentRecycler"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="10dp"
                android:layout_marginTop="-6dp"
                android:layoutAnimation="@anim/layout_list_swipe_right"
                android:visibility="visible" />

            <com.cookMeGood.makeItTasteIt.view.custom.CardViewWithTitle
                android:id="@+id/noCaloriesCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:title="ПОДБОРКА ДЛЯ ТЕХ, КОМУ НЕ НУЖНЫ КАЛОРИИ"
                app:image="@drawable/image_card_view_with_title"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ProgressBar
        android:id="@+id/mainFragmentProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:indeterminateTintMode="src_atop"
        android:indeterminateTint="@color/primaryColor"/>

</LinearLayout>