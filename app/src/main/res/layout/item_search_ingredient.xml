<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ingredientLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="8dp">

    <TextView
        android:id="@+id/ingredientName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/marginDefault"
        android:layout_centerVertical="true"
        android:textColor="@color/colorBlack"
        android:textSize="14sp"
        android:fontFamily="@font/roboto"
        android:text="@string/example"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack20"
        android:layout_alignParentBottom="true"/>

    <ImageView
        android:id="@+id/ingredientCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_checkbox_red_16"
        android:contentDescription="@string/content_description_empty"
        android:visibility="gone"/>

</RelativeLayout>