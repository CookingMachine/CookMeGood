<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    tools:context=".view.activity.SuggestActivity">

    <ImageView
        android:id="@+id/suggestActivityAddImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="72dp"
        android:contentDescription="@string/content_description_empty"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_picture" />

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/suggestActivityToolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="2dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <ImageView
        android:id="@+id/suggestActivityImage"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="-30dp"
        android:scaleType="fitCenter" />
    <include layout="@layout/content_suggest_recipe_bottom_sheet"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>