<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.cookMeGood.makeItTasteIt.view.fragment.MainFragment"
        android:label="MainFragment" >
        <action
            android:id="@+id/action_mainFragment_to_categoryFragment"
            app:destination="@id/categoryFragment" />
    </fragment>
    <fragment
        android:id="@+id/cartFragment"
        android:name="com.cookMeGood.makeItTasteIt.view.fragment.CartFragment"
        android:label="fragment_cart"
        tools:layout="@layout/fragment_cart" />
    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.cookMeGood.makeItTasteIt.view.fragment.CategoryFragment"
        android:label="CategoryFragment" >
        <action
            android:id="@+id/action_categoryFragment_to_suggestActivity"
            app:destination="@id/suggestActivity" />
        <action
            android:id="@+id/action_categoryFragment_to_recipeActivity"
            app:destination="@id/recipeActivity" />
        <action
            android:id="@+id/action_categoryFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>
    <fragment
        android:id="@+id/favouritesFragment"
        android:name="com.cookMeGood.makeItTasteIt.view.fragment.FavouritesFragment"
        android:label="fragment_favourites"
        tools:layout="@layout/fragment_favourites" />
    <fragment
        android:id="@+id/restaurantFragment"
        android:name="com.cookMeGood.makeItTasteIt.view.fragment.RestaurantFragment"
        android:label="SuggestFragment" />
    <activity
        android:id="@+id/recipeActivity"
        android:name="com.cookMeGood.makeItTasteIt.view.activity.RecipeActivity"
        android:label="activity_recipe"
        tools:layout="@layout/activity_recipe" />
    <activity
        android:id="@+id/suggestActivity"
        android:name="com.cookMeGood.makeItTasteIt.view.activity.SuggestActivity"
        android:label="activity_suggest"
        tools:layout="@layout/activity_suggest" />
</navigation>